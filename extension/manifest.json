{
  "manifest_version": 3,
  "name": "Apptron Runner - GitHub to Browser IDE",
  "version": "1.0.0",
  "description": "Run any GitHub repository in your browser with one click. Powered by AI debugging assistance.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://github.com/*/*",
    "https://*.apptron.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": [
        "lib/github-parser.js",
        "lib/project-detector.js",
        "content-script.js"
      ],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*", "styles/*"],
      "matches": ["https://github.com/*/*"]
    }
  ]
}
